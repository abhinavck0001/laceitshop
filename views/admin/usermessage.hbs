<section>
  
     <div  style=" margin-left: 83%; margin-top: 3%;">
      <a href="/admin/add-message" class="btn btn-success ml-auto">Add message</a>
        </div>
<table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">message1</th>
      <th scope="col">message2</th>
       <th scope="col">message3</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#each message}}
      <th scope="row">{{inc @index}}</th>
      <td>{{this.message1}}</td>
       <td>{{this.message2}}</td>
        <td>{{this.message3}}</td>
      

             <td> <a
              class="btn btn-danger" 
              
              href="/admin/delete-message/?id={{this._id}}" 
              onclick="return confirm ('are you want to delete this product ?')">DELETE
            </a>
            </td>
    </tr>
    {{/each}}
   
    </tr>
  </tbody>
</table>
       
    </div>
</section>